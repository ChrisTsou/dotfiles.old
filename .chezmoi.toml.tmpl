{{- /* Checks if running interactively */ -}}
{{- $interactive := stdinIsATTY -}}

{{- /* Template file for chezmoi config file */ -}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $desktopEnv := "meh" -}}

{{- if eq .chezmoi.hostname "CRS" -}}
{{-   $headless = false -}}
{{-   $desktopEnv = "kde" -}}
{{- end -}}

{{- if hasKey . "headless" -}}
{{-   $headless = .headless -}}
{{- else if $interactive -}}
{{-   $headless = promptBool "headless" -}}
{{- end -}}

{{- if $interactive -}}
{{-   writeToStdout "ðŸ’¡ Tip: you can re-enter your data with `chezmoi init --data=false`.\n" -}}
{{- end -}}

[data]
    headless = {{ $headless }}
    desktopEnv = {{ $desktopEnv | quote }}
    is_wsl = {{ (.chezmoi.kernel.osrelease | regexMatch "-microsoft-standard$") }}

[merge]
command = "nvim"
args = [
    "-d",
    "{{ "{{ .Destination }}" }}",
    "{{ "{{ .Source }}" }}",
    "{{ "{{ .Target }}" }}",
]

[git]
autoAdd = true
